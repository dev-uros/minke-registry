{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    "store:default",
    "clipboard-manager:default",
    "clipboard-manager:allow-write-text",
    "shell:default",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "security",
          "cmd": "security",
          "args": true,
          "sidecar": false
        }
      ]
    },
    "dialog:default",
    "fs:default",
    "dialog:allow-save",
    "fs:allow-write-text-file",
    {
      "identifier": "fs:scope",
      "allow": [
        { "path": "**" }
      ]
    },
    "dialog:allow-open",
    "fs:allow-read-text-file"
  ]
}